#include <WiFi.h>
#include "esp_camera.h"

// ===== PHáº¦N 1: Cáº¥u hÃ¬nh WiFi vÃ  chÃ¢n camera cho ESP32-CAM AI Thinker =====
const char* ssid = "wifi-noi-bo";       // ğŸ” Äá»•i tÃªn WiFi táº¡i Ä‘Ã¢y
const char* password = "85898589";      // ğŸ” Äá»•i máº­t kháº©u WiFi táº¡i Ä‘Ã¢y

#define PWDN_GPIO_NUM  32
#define RESET_GPIO_NUM -1
#define XCLK_GPIO_NUM  0
#define SIOD_GPIO_NUM  26
#define SIOC_GPIO_NUM  27

#define Y9_GPIO_NUM    35
#define Y8_GPIO_NUM    34
#define Y7_GPIO_NUM    39
#define Y6_GPIO_NUM    36
#define Y5_GPIO_NUM    21
#define Y4_GPIO_NUM    19
#define Y3_GPIO_NUM    18
#define Y2_GPIO_NUM    5
#define VSYNC_GPIO_NUM 25
#define HREF_GPIO_NUM  23
#define PCLK_GPIO_NUM  22

// 4 for flash led or 33 for normal led
#define LED_GPIO_NUM   4

WiFiServer server(9999);               // Táº¡o TCP server cá»•ng 9999
WiFiClient client;                     // Biáº¿n client toÃ n cá»¥c Ä‘á»ƒ giá»¯ káº¿t ná»‘i

unsigned long lastSendTime = 0;
const int sendIntervalMs = 100;        // Gá»­i áº£nh má»—i 100ms (10 áº£nh/s)

// ===== PHáº¦N 2: Khá»Ÿi táº¡o camera =====
void setupCamera() {
  camera_config_t config;
  config.ledc_channel = LEDC_CHANNEL_0;
  config.ledc_timer   = LEDC_TIMER_0;
  config.pin_d0       = Y2_GPIO_NUM;
  config.pin_d1       = Y3_GPIO_NUM;
  config.pin_d2       = Y4_GPIO_NUM;
  config.pin_d3       = Y5_GPIO_NUM;
  config.pin_d4       = Y6_GPIO_NUM;
  config.pin_d5       = Y7_GPIO_NUM;
  config.pin_d6       = Y8_GPIO_NUM;
  config.pin_d7       = Y9_GPIO_NUM;
  config.pin_xclk     = XCLK_GPIO_NUM;
  config.pin_pclk     = PCLK_GPIO_NUM;
  config.pin_vsync    = VSYNC_GPIO_NUM;
  config.pin_href     = HREF_GPIO_NUM;
  config.pin_sccb_sda = SIOD_GPIO_NUM;
  config.pin_sccb_scl = SIOC_GPIO_NUM;
  config.pin_pwdn     = PWDN_GPIO_NUM;
  config.pin_reset    = RESET_GPIO_NUM;

  config.xclk_freq_hz = 20000000;
  config.pixel_format = PIXFORMAT_JPEG;

  config.frame_size   = FRAMESIZE_QVGA;       // 320x240
  config.jpeg_quality = 12;                   // Giáº£m nháº¹ Ä‘á»ƒ tá»‘c Ä‘á»™ cao hÆ¡n
  config.fb_count     = 2;
  config.grab_mode    = CAMERA_GRAB_LATEST;
  config.fb_location  = CAMERA_FB_IN_PSRAM;

  esp_err_t err = esp_camera_init(&config);
  if (err != ESP_OK) {
    Serial.printf("âŒ Camera init failed: 0x%x\n", err);
    return;
  }

  Serial.println("âœ… Camera Ä‘Ã£ sáºµn sÃ ng!");
}

// ===== PHáº¦N 3: Káº¿t ná»‘i WiFi =====
void setupWiFi() {
  Serial.println("ğŸ“¶ Äang káº¿t ná»‘i WiFi...");
  WiFi.begin(ssid, password);
  WiFi.setSleep(false);

  int retry = 0;
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
    retry++;
    if (retry > 30) {
      Serial.println("\nâŒ KhÃ´ng káº¿t ná»‘i Ä‘Æ°á»£c WiFi!");
      return;
    }
  }

  Serial.println("\nâœ… ÄÃ£ káº¿t ná»‘i WiFi!");
  Serial.print("ğŸ“ ESP32 IP: ");
  Serial.println(WiFi.localIP());
}

// ===== PHáº¦N 4: Gá»­i áº£nh qua TCP giá»¯ káº¿t ná»‘i liÃªn tá»¥c =====
void loop() {
  if (!client || !client.connected()) {
    client = server.available();
    if (client) {
      Serial.println("ğŸ“¥ Client Ä‘Ã£ káº¿t ná»‘i.");
    }
  }

  if (client && client.connected()) {
    unsigned long now = millis();
    if (now - lastSendTime >= sendIntervalMs) {
      lastSendTime = now;

      camera_fb_t *fb = esp_camera_fb_get();
      if (!fb) {
        Serial.println("âŒ KhÃ´ng láº¥y Ä‘Æ°á»£c áº£nh!");
        return;
      }

      uint32_t imgLen = fb->len;
      client.write((uint8_t*)&imgLen, 4);       // Gá»­i Ä‘á»™ dÃ i áº£nh (4 byte)
      client.write(fb->buf, fb->len);           // Gá»­i áº£nh JPEG
      Serial.printf("ğŸ“¤ ÄÃ£ gá»­i %d bytes\n", imgLen);

      esp_camera_fb_return(fb);                 // Tráº£ láº¡i buffer
    }
  }
}

// ===== PHáº¦N 5: Khá»Ÿi Ä‘á»™ng chÆ°Æ¡ng trÃ¬nh =====
void setup() {
  Serial.begin(115200);
  delay(500);
  Serial.println("ğŸš€ ESP32-CAM AI Thinker Ä‘ang khá»Ÿi Ä‘á»™ng...");

  setupCamera();    // Camera init
  setupWiFi();      // WiFi connect
  server.begin();   // Báº¯t Ä‘áº§u TCP server
  Serial.println("ğŸ“¡ Server TCP sáºµn sÃ ng chá» káº¿t ná»‘i!");
}
