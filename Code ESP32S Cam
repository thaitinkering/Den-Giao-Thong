#include <WiFi.h>
#include <esp_camera.h>

// ğŸŸ© WiFi & Server cáº¥u hÃ¬nh
const char* ssid = "Dong Bui";
const char* password = "123456789";
const char* server_ip = "192.168.1.165";
const uint16_t server_port = 9999;

WiFiClient client;  // ğŸ” Giá»¯ káº¿t ná»‘i TCP toÃ n cá»¥c

// ğŸ§® HÃ m tÃ­nh checksum Ä‘Æ¡n giáº£n
uint32_t calculateChecksum(const uint8_t* data, size_t len) {
  uint32_t sum = 0;
  for (size_t i = 0; i < len; ++i) sum += data[i];
  return sum;
}

// ğŸ“¸ Cáº¥u hÃ¬nh camera cho AI Thinker
void setupCamera() {
  camera_config_t config;
  config.ledc_channel = LEDC_CHANNEL_0;
  config.ledc_timer = LEDC_TIMER_0;
  config.pin_d0 = 5;
  config.pin_d1 = 18;
  config.pin_d2 = 19;
  config.pin_d3 = 21;
  config.pin_d4 = 36;
  config.pin_d5 = 39;
  config.pin_d6 = 34;
  config.pin_d7 = 35;
  config.pin_xclk = 0;
  config.pin_pclk = 22;
  config.pin_vsync = 25;
  config.pin_href = 23;
  config.pin_sscb_sda = 26;
  config.pin_sscb_scl = 27;
  config.pin_pwdn = 32;
  config.pin_reset = -1;
  config.xclk_freq_hz = 20000000;
  config.pixel_format = PIXFORMAT_JPEG;

  config.frame_size = FRAMESIZE_240X240;
  config.jpeg_quality = 10;
  config.fb_count = 1;

  esp_err_t err = esp_camera_init(&config);
  if (err != ESP_OK) {
    Serial.printf("Camera init failed: 0x%x\n", err);
    ESP.restart();
  }
}

void setup() {
  Serial.begin(115200);
  Serial.println("ğŸ”Œ Káº¿t ná»‘i WiFi...");
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(300);
    Serial.print(".");
  }
  Serial.println("\nâœ… ÄÃ£ káº¿t ná»‘i WiFi");

  setupCamera();
}

// ğŸ” HÃ m gá»­i áº£nh 1 láº§n qua TCP
bool sendImage() {
  camera_fb_t *fb = esp_camera_fb_get();
  if (!fb) {
    Serial.println("âŒ Lá»—i: KhÃ´ng chá»¥p Ä‘Æ°á»£c áº£nh");
    return false;
  }

  uint32_t img_len = fb->len;
  uint32_t checksum = calculateChecksum(fb->buf, fb->len);

  // Gá»­i dá»¯ liá»‡u
  bool success = client.write((uint8_t*)&img_len, 4) == 4 &&
                 client.write(fb->buf, fb->len) == fb->len &&
                 client.write((uint8_t*)&checksum, 4) == 4;

  esp_camera_fb_return(fb);  // Tráº£ buffer

  if (!success) {
    Serial.println("âš ï¸ Gá»­i áº£nh tháº¥t báº¡i. Máº¥t káº¿t ná»‘i?");
    return false;
  }

  return true;
}

void loop() {
  // ğŸŸ¡ Káº¿t ná»‘i láº¡i náº¿u máº¥t
  if (!client.connected()) {
    Serial.print("ğŸ”„ Káº¿t ná»‘i láº¡i TCP... ");
    client.stop();
    if (client.connect(server_ip, server_port)) {
      Serial.println("âœ… OK");
    } else {
      Serial.println("âŒ Tháº¥t báº¡i");
      delay(500);  // chá» trÆ°á»›c khi thá»­ láº¡i
      return;
    }
  }

  // ğŸš€ Gá»­i áº£nh náº¿u káº¿t ná»‘i thÃ nh cÃ´ng
  if (!sendImage()) {
    client.stop();  // máº¥t káº¿t ná»‘i hoáº·c lá»—i â†’ Ä‘Ã³ng rá»“i sáº½ reconnect á»Ÿ vÃ²ng sau
  }

  // âš ï¸ KhÃ´ng delay lÃ¢u, Ä‘á»ƒ cÃ³ tá»‘c Ä‘á»™ cao
  delay(30);  // giÃºp buffer khÃ´ng bá»‹ Ä‘áº§y náº¿u mÃ¡y tÃ­nh yáº¿u
}
