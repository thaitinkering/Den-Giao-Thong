#include <WiFi.h> 
#include <esp_camera.h>

// âš™ï¸ ThÃ´ng tin máº¡ng vÃ  server
const char* ssid = "Dong Bui";
const char* password = "123456789";
const char* server_ip = "192.168.1.165";
const uint16_t server_port = 9999;

WiFiClient client;
unsigned long lastReconnectAttempt = 0;
const unsigned long reconnectInterval = 5000;

// âœ… TÃ­nh checksum Ä‘Æ¡n giáº£n
uint32_t calculateChecksum(const uint8_t* data, size_t len) {
  uint32_t sum = 0;
  for (size_t i = 0; i < len; ++i) sum += data[i];
  return sum;
}

// ğŸ“· Cáº¥u hÃ¬nh camera cho AI Thinker
void setupCamera() {
  camera_config_t config;
  config.ledc_channel = LEDC_CHANNEL_0;
  config.ledc_timer = LEDC_TIMER_0;
  config.pin_d0 = 5;
  config.pin_d1 = 18;
  config.pin_d2 = 19;
  config.pin_d3 = 21;
  config.pin_d4 = 36;
  config.pin_d5 = 39;
  config.pin_d6 = 34;
  config.pin_d7 = 35;
  config.pin_xclk = 0;
  config.pin_pclk = 22;
  config.pin_vsync = 25;
  config.pin_href = 23;
  config.pin_sscb_sda = 26;
  config.pin_sscb_scl = 27;
  config.pin_pwdn = 32;
  config.pin_reset = -1;
  config.xclk_freq_hz = 20000000;
  config.pixel_format = PIXFORMAT_JPEG;

  config.frame_size = FRAMESIZE_240X240;
  config.jpeg_quality = 10;
  config.fb_count = 1;

  esp_err_t err = esp_camera_init(&config);
  if (err != ESP_OK) {
    Serial.printf("âŒ Camera init failed: 0x%x\n", err);
    ESP.restart();
  }
}

void setup() {
  Serial.begin(115200);
  Serial.println("ğŸ”Œ Äang káº¿t ná»‘i WiFi...");

  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("\nâœ… ÄÃ£ káº¿t ná»‘i WiFi");
  Serial.print("ğŸ“ IP: ");
  Serial.println(WiFi.localIP());

  setupCamera();
}

// ğŸ“¤ Gá»­i 1 áº£nh qua TCP
bool sendImage() {
  camera_fb_t *fb = esp_camera_fb_get();
  if (!fb) {
    Serial.println("âŒ KhÃ´ng láº¥y Ä‘Æ°á»£c áº£nh");
    return false;
  }

  uint32_t img_len = fb->len;
  uint32_t checksum = calculateChecksum(fb->buf, img_len);

  // Gá»­i Ä‘á»™ dÃ i, áº£nh, checksum
  bool success = client.write((uint8_t*)&img_len, 4) == 4 &&
                 client.write(fb->buf, img_len) == img_len &&
                 client.write((uint8_t*)&checksum, 4) == 4;

  esp_camera_fb_return(fb);

  if (!success) {
    Serial.println("âš ï¸ Gá»­i áº£nh tháº¥t báº¡i");
    return false;
  }

  return true;
}

void loop() {
  // ğŸ” Kiá»ƒm tra WiFi
  if (WiFi.status() != WL_CONNECTED) {
    Serial.println("ğŸ“´ Máº¥t WiFi. Äang reconnect...");
    WiFi.disconnect();
    WiFi.begin(ssid, password);
    delay(1000);
    return;
  }

  // ğŸ”„ Reconnect TCP náº¿u máº¥t
  if (!client.connected()) {
    unsigned long now = millis();
    if (now - lastReconnectAttempt > reconnectInterval) {
      Serial.println("ğŸ”„ Thá»­ káº¿t ná»‘i láº¡i TCP...");
      client.stop();
      if (client.connect(server_ip, server_port)) {
        Serial.println("âœ… Káº¿t ná»‘i TCP thÃ nh cÃ´ng!");
      } else {
        Serial.println("âŒ Káº¿t ná»‘i TCP tháº¥t báº¡i.");
      }
      lastReconnectAttempt = now;
    }
    delay(50);
    return;
  }

  // ğŸš€ Gá»­i áº£nh náº¿u káº¿t ná»‘i á»•n Ä‘á»‹nh
  if (!sendImage()) {
    client.stop();  // sáº½ reconnect á»Ÿ vÃ²ng sau
  }

  delay(30);  // trÃ¡nh ngháº½n buffer
}
